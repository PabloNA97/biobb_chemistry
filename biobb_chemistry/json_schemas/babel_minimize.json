{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_chemistry/json_schemas/1.0/babel_minimize",
    "title": "Energetically minimize small molecules.",
    "type": "object",
    "required": [
        "input_path",
        "output_path"
    ],
    "properties": {
        "input_path": {
            "type": "string",
            "description": "Path to the input file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_chemistry/raw/master/biobb_chemistry/test/data/babel/babel.minimize.pdb",
            "enum": [
                ".*\\.pdb$",
                ".*\\.mol2$"
            ]
        },
        "output_path": {
            "type": "string",
            "description": "Path to the output file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_chemistry/raw/master/biobb_chemistry/test/reference/babel/ref_babel.minimize.pdb",
            "enum": [
                ".*\\.pdb$",
                ".*\\.mol2$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "criteria": {
                    "type": "float",
                    "default": "1e-6",
                    "description": "Convergence criteria"
                },
                "method": {
                    "type": "string",
                    "default": "cg",
                    "description": "Method.",
                    "enum": [
                        "cg (conjugate gradients algorithm)",
                        "sd (steepest descent algorithm)"
                    ]
                },
                "force_field": {
                    "type": "string",
                    "default": null,
                    "description": "Force field.",
                    "enum": [
                        "GAFF (General Amber Force Field)",
                        "Ghemical (Ghemical force field)",
                        "MMFF94 (MMFF94 force field)",
                        "MMFF94s (MMFF94s force field)",
                        "UFF (Universal Force Field)"
                    ]
                },
                "hydrogens": {
                    "type": "boolean",
                    "default": false,
                    "description": "Add hydrogen atoms."
                },
                "steps": {
                    "type": "number",
                    "default": 2500,
                    "description": "Maximum number of steps."
                },
                "cutoff": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use cut-off."
                },
                "rvdw": {
                    "type": "float",
                    "default": 6.0,
                    "description": "VDW cut-off distance."
                },
                "rele": {
                    "type": "float",
                    "default": 10.0,
                    "description": "Electrostatic cut-off distance."
                },
                "frequency": {
                    "type": "number",
                    "default": 10,
                    "description": "Frequency to update the non-bonded pairs."
                },
                "obminimize_path": {
                    "type": "string",
                    "default": "obminimize",
                    "description": "Path to the obminimize executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "description": "Container path definition."
                },
                "container_image": {
                    "type": "string",
                    "default": "'informaticsmatters/obabel:latest'",
                    "description": "Container image definition."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "'/tmp'",
                    "description": "Container volume path definition."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "description": "Container working directory definition."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "description": "Container user_id definition."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "'/bin/bash'",
                    "description": "Path to default shell inside the container."
                }
            }
        }
    },
    "additionalProperties": false
}