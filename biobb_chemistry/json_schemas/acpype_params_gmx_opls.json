{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_chemistry/json_schemas/1.0/acpype_params_gmx_opls",
    "title": "Small molecule parameterization for OPLS/AA MD package.",
    "type": "object",
    "required": [
        "input_path",
        "output_path_itp",
        "output_path_top"
    ],
    "properties": {
        "input_path": {
            "type": "string",
            "description": "Path to the input file.",
            "enum": [
                ".*\\.pdb$",
                ".*\\.mdl$",
                ".*\\.mol2$"
            ]
        },
        "output_path_itp": {
            "type": "string",
            "description": "Path to the ITP output file.",
            "enum": [
                ".*\\.itp$"
            ]
        },
        "output_path_top": {
            "type": "string",
            "description": "Path to the TOP output file.",
            "enum": [
                ".*\\.top$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "basename": {
                    "type": "string",
                    "default": "BBB",
                    "description": "A basename for the project (folder and output files)."
                },
                "charge": {
                    "type": "number",
                    "default": 0,
                    "description": "Net molecular charge, for gas default is 0."
                },
                "acpype_path": {
                    "type": "string",
                    "default": "acpype",
                    "description": "Path to the acpype executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "description": "Container path definition."
                },
                "container_image": {
                    "type": "string",
                    "default": "'mmbirb/acpype:latest'",
                    "description": "Container image definition."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "'/tmp'",
                    "description": "Container volume path definition."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "description": "Container working directory definition."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "description": "Container user_id definition."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "'/bin/bash'",
                    "description": "Path to default shell inside the container."
                }
            }
        }
    },
    "additionalProperties": false
}